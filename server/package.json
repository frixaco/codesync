{
  "private": "true",
  "name": "codesync-server",
    "scripts": {
        "build:base": "esbuild ./src/index.ts --bundle --outfile=dist/index.js --format=cjs --platform=node",
        "build": "pnpm build:base -- --sourcemap",
        "build:watch": "pnpm build:base -- --sourcemap --watch",
        "dev": "nodemon ./src/index.ts",
        "db:gen": "prisma generate",
        "db:push": "prisma db push"
    },
    "dependencies": {
        "@fastify/cors": "^8.1.0",
        "@prisma/client": "^4.1.1",
        "dotenv": "^16.0.1",
        "fastify": "^4.3.0",
        "fastify-plugin": "^4.0.0"
    },
    "devDependencies": {
        "@types/node": "^18.6.4",
        "esbuild": "^0.14.53",
        "nodemon": "^2.0.19",
        "prisma": "^4.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    }
}
